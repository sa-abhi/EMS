<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title"><a href="@Url.Action("Create", "City")" class="btn btn-success">Create New City</a></h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">City</a></li>
                        <li class="breadcrumb-item active" aria-current="page"></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">City List</h5>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CityName)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CityName)
                                        </td>
                                        <td>
                                            @*<a href="@Url.Action("Edit", "City", new { id = item.CityID }, new { data_modal = "" })" class="btn menu-icon " style="padding:2px"> <i class="mdi mdi-account-edit font-20"></i> </a>*@
                                            @Html.ActionLink("Efit City", "Edit", "City", new { id = item.CityID }, new { data_modal = "" })
                                            |
                                            @*<a href="@Url.Action("Details", "City")" class="btn menu-icon" data-target="DetailsModal" style="padding:2px"> <i class="mdi mdi-account-card-details font-18"></i> </a>*@

                                            @Html.ActionLink("View City", "Details", "City", new {id=item.CityID}, new { data_modal = "" })
                                            

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
    <!-- .right-sidebar -->
    <!-- ============================================================== -->
    <!-- End Right sidebar -->
    <!-- ============================================================== -->
    <div class="modal fade show" id="DetailsModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header"> Details</div>
                    <div class="modal-body" id="DetailsBody">
                        
                     
                    </div>
                </div>
            </div>
        </div>
    <div class="modal fade show" id="EditModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"> Details</div>
                <div class="modal-body" id="DetailsBody">


                </div>
            </div>
        </div>
    </div>
</div>