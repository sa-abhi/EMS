@model IEnumerable<EventManagementSystem.ViewModels.ClientOrderViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Client Order Details</h2>

<table class="table table-striped table-responsive table-bordered">
    <tr>
        <th>
            Order ID
        </th>
        <th>
            Client Name
        </th>

        <th>
            Event Type
        </th>
        <th>
            Event Name
        </th>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>

        <th>
            Venue
        </th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientOrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EventSubTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventEndDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ClientOrderID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ClientOrderID }) |
            </td>
        </tr>
    }

</table>